{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/asledgehammer/Rosetta-Schema/main/1.2/games/projectzomboid/context.json",
  "type": "object",
  "minItems": 1,
  "additionalProperties": false,
  "properties": {
    "server": {
      "type": "boolean",
      "description": "If the event fires on the server.",
      "default": true
    },
    "client": {
      "type": "boolean",
      "description": "If the event fires on the client.",
      "default": true
    },
    "singleplayer": {
      "type": "boolean",
      "description": "If the event fires in singleplayer.",
      "default": true
    },
    "multiplayer": {
      "type": "boolean",
      "description": "If the event fires in multiplayer.",
      "default": true
    }
  }
}
